<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    tools:context=".QuizActivity"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/txtTotalQuestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Question 1/10"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Score: 0"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Correct: 16"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtWrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Incorrect: 12"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:30"
            android:textAlignment="textEnd"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtQuestionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:padding="20dp"
            android:background="@drawable/question_container_bg"
            android:text="Welcome to QuizCraft! Get ready to test your knowledge!"
            android:layout_margin="14dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio_button1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:button="@null"
                    android:freezesText="true"
                    android:text="OS"
                    android:textSize="23sp"
                    android:textColor="#000 "
                    android:gravity="center"
                    android:textAlignment="center"
                    android:padding="18dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/default_option_bg"/>

                <RadioButton
                    android:id="@+id/radio_button2"
                    android:layout_marginTop="5dp"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:freezesText="true"
                    android:text="Random Access Memory"
                    android:textSize="23sp"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:padding="18dp"
                    android:background="@drawable/default_option_bg"/>

                <RadioButton
                    android:id="@+id/radio_button3"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:freezesText="true"
                    android:text="Operating System"
                    android:layout_margin="8dp"
                    android:textSize="23sp"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:padding="18dp"
                    android:background="@drawable/default_option_bg"/>

                <RadioButton
                    android:id="@+id/radio_button4"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:freezesText="true"
                    android:text="Browser"
                    android:textSize="23sp"
                    android:textColor="#000"
                    android:layout_margin="8dp"
                    android:textAlignment="center"
                    android:padding="18dp"
                    android:background="@drawable/default_option_bg"/>
            </RadioGroup>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/owl_png_app" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/button_confirm"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Confirm"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
